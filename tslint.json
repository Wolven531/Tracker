{
	"defaultSeverity": "error",
	"extends": [
		"tslint:recommended",
		"tslint-eslint-rules"
	],
	"jsRules": { },
	"rules": {
		"arrow-parens": {
			"severity": "off",
			"options": "ban-single-arg-parens"
		},
		"indent": {
			"severity": "error",
			"options": "tabs"
		},
		"no-angle-bracket-type-assertion": {
			"severity": "off"
		},
		"semicolon": {
			"severity": "error",
			"options": "never"
		},
		"trailing-comma": {
			"severity": "error",
			"options": {
				"multiline": "never",
				"singleline": "never"
			}
		},
		"quotemark": {
			"severity": "error",
			"options": "single"
		}
	},
	"rulesDirectory": []
}
